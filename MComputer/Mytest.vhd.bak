LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY corder_8_3 IS
PORT(i:IN STD_LOGIC_VECTOR(7 DOWNTO 0);
	  y:OUT STD_LOGIC_VECTOR(2 DOWNTO 0));
END;

ARCHITECTURE one of corder_8_3 IS
BEGIN
PROCESS(i)
	BEGIN
	CASE i IS
		WHEN "00000001" => y <="000";
		WHEN "00000010" => y <="001";
		WHEN "00000100" => y <="010";
		WHEN "00001000" => y <="011";
		WHEN "00010000" => y <="100";
		WHEN "00100000" => y <="101";
		WHEN "01000000" => y <="110";
		WHEN "10000000" => y <="111";
		WHEN OTHERS=> y <="000";
	END CASE;
END PROCESS;
END;